<Window x:Class="WpfApp1.znm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="znm" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="113"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="113"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="115"/>
            <ColumnDefinition Width="115"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="113"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="113"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="110"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="85"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="56"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="1"/>
        <TextBox Grid.Column="3" Grid.ColumnSpan="10" Grid.Row="1"/>
        <Button Grid.Column="14" Grid.Row="1" Click="Button_Click"/>
        <DataGrid x:Name="table" Grid.Column="7" Grid.ColumnSpan="6" Grid.Row="3" Grid.RowSpan="4" SelectionChanged="tableChanged"/>
        <DataGrid x:Name="prod" Grid.Column="13" Grid.Row="3"/>
        <DataGrid x:Name="stuffer" Grid.Column="13" Grid.Row="4"/>
        <Button Grid.Column="3" Grid.ColumnSpan="3" Content="ДОБАВИТЬ" Grid.Row="8"/>
        <TextBox x:Name="count" Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="5"/>
        <ComboBox x:Name="stuffID" Grid.Column="3" Grid.Row="3"/>
        <ComboBox x:Name="prodID" Grid.Column="5" Grid.Row="3"/>
    </Grid>
</Window>
